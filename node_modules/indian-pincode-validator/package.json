{
  "name": "indian-pincode-validator",
  "version": "2.0.0",
  "description": "A comprehensive npm package for validating and working with Indian postal codes (pincodes)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jest.config.js",
    "pretest": "tsc -p tsconfig.test.json",
    "lint": "eslint .",
    "build": "tsc && npm run copy-files",
    "copy-files": "node scripts/copy-files.js",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [
    "pincode",
    "postal-code",
    "india",
    "validation",
    "delivery",
    "courier",
    "cod",
    "shipping"
  ],
  "author": "HOTHEAD01TH",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HOTHEAD01TH/indian-pincode-validator.git"
  },
  "bugs": {
    "url": "https://github.com/HOTHEAD01TH/indian-pincode-validator/issues"
  },
  "homepage": "https://github.com/HOTHEAD01TH/indian-pincode-validator#readme",
  "files": [
    "dist",
    "dist/data",
    "LICENSE",
    "README.md",
    "USAGE.md"
  ]
}
